<div class="container">
  <ul class="text-center">
    {{#each article}}
      {{#unless isSaved}}
        <li class="card row">
          <div class="about">
            <h2 class="card-header">{{title}}</h2>
            <div class="card-body">
              <p>{{summary}}</p>
              <a href="{{link}}">{{link}}</a>
            </div>
            <button type="button" id="save" data-id="{{this.id}}" class="btn btn-primary">Save</button>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>